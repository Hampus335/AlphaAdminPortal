@model AddProjectForm

<div id="addProjectModal" class="modal">
    <div class="modal-content">
        <header class="modal-header">
            <h3>Add Project</h3>
            <button data-close="true" data-target="#addModal" type="button" class="btn-close"></button>
        </header>
        <div class="modal-body">
            <form novalidate method="post" asp-action="Add" asp-controller="Projects">
                <div class="form-group">
                    <label asp-for="ClientName"></label>
                    <div class="field-group">
                        <input asp-for="ClientName" />
                        <span asp-validation-for="ClientName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ProjectName"></label>
                    <div class="field-group">
                        <input asp-for="ProjectName" />
                        <span asp-validation-for="ProjectName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <div class="field-group">
                        <input asp-for="Description" />
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Budget"></label>
                    <div class="field-group">
                        <input asp-for="Budget" type="number" />
                        <span asp-validation-for="Budget"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Status"></label>
                    <div class="field-group">
                        <select asp-for="Status">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="Status"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="field-group">
                        <input asp-for="StartDate" type="datetime-local" />
                        <span asp-validation-for="StartDate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="field-group">
                        <input asp-for="EndDate" type="datetime-local" />
                        <span asp-validation-for="EndDate"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-blue btn-submit">Create</button>
            </form>
        </div>
    </div>
</div>
